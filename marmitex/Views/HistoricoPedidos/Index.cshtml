@model IList<ClassesMarmitex.Pedido>

@{
    ViewBag.Title = "Index";
}

<row>
    @if (Model != null)
    {

        <h1 class="text-center">histórico de pedidos</h1>

        @*<div class="text-right">
                <a href="/Produtos/Adicionar" class="btn btn-success">adicionar produto</a>
            </div>
            <hr />*@

        <div class="col-md-6 col-md-offset-3">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>número do pedido</th>
                            <th>data do pedido</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in Model)
                        {
                            <tr>
                                <th><a href="#" data-toggle="modal" data-target="#modalPedido_@pedido.Id">detalhes</a></th>
                                <td>@pedido.Id</td>
                                <td>@pedido.DataPedido.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        }
                </table>

                @foreach (var pedido in Model)
                {
                    <div class="modal fade" id="modalPedido_@pedido.Id" role="dialog">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h2 class="modal-title text-center">detalhes do pedido</h2>
                                </div>
                                <div class="modal-body text-center">
                                    <p>Número do pedido: @pedido.Id</p>
                                    <p>Data do pedido: @pedido.DataPedido</p>

                                    <h3>Produtos</h3>
                                    @foreach (var produto in pedido.ListaProdutos)
                                    {
                                        <p>@produto.Quantidade @produto.Produto.Nome</p>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">fechar</button>
                                </div>
                            </div>

                        </div>
                    </div>
                }

            </div>
        </div>
    }
    @if (@ViewBag.MensagemHistoricoPedido != null)
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6 resumo-pedido" style="text-align: center">
                        <p>@ViewBag.MensagemHistoricoPedido </p>
                    </div>
                </div>
            </div>
        </div>
    }
</row>
