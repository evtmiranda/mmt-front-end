@{
    ViewBag.Title = "editar pedido";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6 editar-pedido" style="text-align: center">
                <h1>editar pedido</h1>
                <hr />
                <h3>produtos</h3>
                <div id="visualizacaoEdicaoCarrinho" class="form-inline">
                    @if (Session["Carrinho"] != null)
                    {
                        foreach (ClassesMarmitex.ProdutoPedido p in (List<ClassesMarmitex.ProdutoPedido>)Session["Carrinho"])
                        {
                            string RemoverProduto = string.Format("PostRemoverProduto('/Carrinho/RemoverProduto', '{0}')", @Html.Raw(Json.Encode(@p.Produto)));

                            //exibe os produtos e a quantidade
                            <div class="col-md-12 form-group">
                                <div class="col-md-6">
                                    <input name="produto @p.Produto.Id" type="text" style="display:none" value="@p.Produto.Nome" />
                                    <label>@p.Produto.Nome</label>
                                </div>
                                <div class="col-md-6">
                                    <input name="quantidade @p.Produto.Id" type="number" min="1" max="99" value="@p.Quantidade" class="form-control">
                                    <a href="#" style="color: red" onclick="@RemoverProduto"><i class="glyphicon glyphicon-remove"></i></a>
                                </div>
                            </div>
                        }
                    }
                </div>
                <br />
                <div>
                    <a href="~/Home" class="btn btn-amarelo-sem-animacao" role="button">adicionar produtos</a>
                    @*<a href="~/DetalhesPedido" class="btn btn-vermelho-sem-animacao" role="button">salvar</a>*@
                    <input type="submit" class="btn btn-vermelho-sem-animacao" value="salvar">
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

