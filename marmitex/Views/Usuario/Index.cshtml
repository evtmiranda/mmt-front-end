
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@model ClassesMarmitex.UsuarioParceiro

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="text-align: center">
                <h1>quero me cadastrar</h1>
                <p style="font:italic; color:#bc2026">os campos com * são de preenchimento obrigatório</p>
                <hr />
                <form method="post" action="@Session["urlBase"]/Usuario/Cadastrar">
                    <div class="form-group">
                        <p class="vermelho-marmitex">@Html.ValidationMessage("Nome")</p>
                        <label for="nome">nome *</label><br />
                        @if (Model != null)
                        {
                            <input type="text" class="form-control" required title="O preenchimento do nome é obrigatório" id="nome" name="Nome" value="@Model.Nome" placeholder="digite o seu nome">
                        }
                        else
                        {
                            <input type="text" class="form-control" required title="O preenchimento do nome é obrigatório" id="nome" name="Nome" placeholder="digite o seu nome">
                        }

                    </div>

                    <div class="form-group">
                        <label for="apelido">como prefere ser chamado?</label>

                        @if (Model != null)
                        {
                            <input type="text" class="form-control" id="apelido" name="Apelido" value="@Model.Apelido" placeholder="digite como gostaria de ser chamado">
                        }
                        else
                        {
                            <input type="text" class="form-control" id="apelido" name="Apelido" placeholder="digite como gostaria de ser chamado">
                        }


                    </div>

                    <p class="vermelho-marmitex">@Html.ValidationMessage("Email")</p>
                    <div class="form-group">
                        <label for="email">e-mail *</label>

                        @if (Model != null)
                        {
                            <input type="email" class="form-control" required title="o preenchimento do e-mail é obrigatório" id="email" name="Email" value="@Model.Email" placeholder="digite o seu e-mail">
                        }
                        else
                        {
                            <input type="email" class="form-control" required title="o preenchimento do e-mail é obrigatório" id="email" name="Email" placeholder="digite o seu e-mail">
                        }


                    </div>

                    <p class="vermelho-marmitex">@Html.ValidationMessage("NumeroCelular")</p>
                    <div class="form-group">
                        <label for="NumeroCelular">celular *</label>

                        @if (Model != null)
                        {
                            <input type="tel" class="form-control" id="NumeroCelular" name="NumeroCelular" onkeyup="formataTelefone(this, event);" maxlength="15" value="@Model.NumeroCelular" placeholder="digite o seu número de celular com DDD">
                        }
                        else
                        {
                            <input type="tel" class="form-control" id="NumeroCelular" name="NumeroCelular" onkeyup="formataTelefone(this, event);" maxlength="15" placeholder="digite o seu número de celular com DDD">
                        }


                    </div>

                    <p class="vermelho-marmitex">@Html.ValidationMessage("Senha")</p>
                    <div class="form-group">
                        <label for="pwd">senha *</label>

                        <input type="password" class="form-control" required title="o preenchimento da senha é obrigatório" id="pwd" name="Senha" placeholder="digite uma senha">

                    </div>

                    <p class="vermelho-marmitex">@Html.ValidationMessage("CodigoParceiro")</p>
                    <div class="form-group">
                        <label for="codigoParceiro">código de sua empresa *</label>

                        @if (Model != null)
                        {
                            <input type="text" class="form-control" required title="o preenchimento do código da empresa é obrigatório" id="codigoParceiro" name="CodigoParceiro" value="@Model.CodigoParceiro" placeholder="digite o código de sua empresa">
                        }
                        else
                        {
                            <input type="text" class="form-control" required title="o preenchimento do código da empresa é obrigatório" id="codigoParceiro" name="CodigoParceiro" placeholder="digite o código de sua empresa">
                        }


                    </div>

                    @if (ViewBag.MensagemCadastro != null)
                    { <br /><p style="color: #bc2026">@ViewBag.MensagemCadastro</p><br />}

                    <input type="submit" class="btn btn-vermelho-sem-animacao" value="cadastrar" />
                </form>

                <br />
                <br />
                <p><a href="@Session["urlBase"]/Login"> já sou cadastrado e quero fazer login</a></p>

            </div>
        </div>
    </div>
</div>
