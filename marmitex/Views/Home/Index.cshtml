@{
    ViewBag.Title = "cardápio";
}

<div class="container-fluid">
    <div class="col-md-2">
        <h3>cardápio</h3>
        <div class="menu-lateral">
            <ul class="sidebar-nav">
                @foreach (ClassesMarmitex.MenuCardapio mc in ViewBag.MenuCardapio)
                {
                    <li><a data-toggle="collapse" data-target=".@mc.Id" href="#">@mc.Nome</a></li>
                }
            </ul>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-9 cardapio">
        <div class="row">
            @foreach (ClassesMarmitex.Produto p in ViewBag.Produtos)
            {
                <div class="@p.IdMenuCardapio col-md-4 collapse">
                    <div class="thumbnail">
                        <img src="@p.Imagem" alt="imagem do produto">
                        <div class="caption">
                            <h3>produto</h3>
                            <p>
                                @p.Descricao<br />
                                @p.Valor
                            </p>
                            <a href="#" class="btn btn-amarelo-sem-animacao" role="button" onclick="adicionarAoCarrinho(@p)"><i class="glyphicon glyphicon-plus"></i> adicionar ao pedido</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        <div class="row-fluid">
            <nav aria-label="...">
                <ul class="pager-cardapio">
                    <li><a href="#">anterior</a></li>
                    <li><a href="#">próximo</a></li>
                </ul>
            </nav>

            <div style="text-align: end">
                <a href="DetalhesPedido/Index" class="btn btn-pedido btn-lg" role="button">fechar pedido <i class="glyphicon glyphicon-ok"></i></a>
            </div>
        </div>
    </div>

</div>

