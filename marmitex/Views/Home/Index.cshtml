@{
    ViewBag.Title = "cardápio";
}

<div class="container-fluid">
    <div class="col-md-2">
        <h3>cardápio</h3>
        <div class="menu-lateral">
            <ul class="sidebar-nav">

                @foreach (ClassesMarmitex.MenuCardapio mc in ViewBag.MenuCardapio)
                {
                    <li><a data-toggle="collapse" data-target=".@mc.Id">Simple collapsible</a></li>
                }
            </ul>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-9 cardapio">
        <div class="row">
            @foreach (ClassesMarmitex.Produto p in ViewBag.Produtos)
            {
                <div class="@p.IdMenuCardapio col-md-4 collapse">
                    <div class="thumbnail">
                        <img src="@p.Imagem" alt="...">
                        <div class="caption">
                            <h3>produto</h3>
                            <p>@p.Descricao<br />
                               @p.Valor
                            </p>
                            <a href="#" class="btn btn-amarelo-sem-animacao" role="button"><i class="glyphicon glyphicon-plus"></i> adicionar ao pedido</a>
                        </div>
                    </div>
                </div>
            }

