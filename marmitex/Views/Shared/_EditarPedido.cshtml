    @if (Session["Carrinho"] != null)
    {
        foreach (ClassesMarmitex.ProdutoPedido p in (List<ClassesMarmitex.ProdutoPedido>)Session["Carrinho"])
        {
            string RemoverProduto = string.Format("PostRemoverProduto('/Carrinho/RemoverProduto', '{0}')", @Html.Raw(Json.Encode(@p.Produto)));

            //exibe os produtos e a quantidade
            <div class="col-md-12 form-group">
                <div class="col-md-6">
                    <input name="produto @p.Produto.Id" type="text" style="display:none" value="@p.Produto.Nome" />
                    <label>@p.Produto.Nome</label>
                </div>
                <div class="col-md-6">
                    <input name="quantidade @p.Produto.Id" type="number" min="1" max="99" value="@p.Quantidade" class="form-control">
                    <a href="#" style="color: red" onclick="@RemoverProduto"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </div>
        }
    }