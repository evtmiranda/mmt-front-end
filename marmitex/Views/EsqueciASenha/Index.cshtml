
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <div class="col-md-3"></div>
            <div class="col-md-6 resumo-pedido" style="text-align: center">
                <h1>olá, vamos te ajudar a recuperar a senha</h1>
                <hr />

                @if (ViewBag.MensagemRecuperarSenha != null)
                {
                    <script>
                    swal({
                        title: 'Oops',
                        html: "@ViewBag.MensagemRecuperarSenha",
                        type: 'error',
                        confirmButtonText: 'Ok',
                        confirmButtonColor: corConfirmacao,
                        cancelButtonColor: corCancelar
                    }).then(function () {
                        //window.location = "Session["urlBase"]/Parceiro/";
                        });
                    </script>
                }

                <form method="post" action="@Session["urlBase"]/EsqueciASenha/EnviarSenhaParaEmail">

                    <div class="form-group">
                        <label for="email">digite o seu e-mail:</label>
                        <input type="email" class="form-control" id="email" name="email">
                        <br />

                        <input type="submit" class="btn btn-vermelho-sem-animacao" value="enviar senha" />

                    </div>
                </form>


            </div>
        </div>
    </div>
</div>

