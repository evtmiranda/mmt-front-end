@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@model ClassesMarmitex.Usuario

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6 mmt-bg-cinza" style="text-align: center">
                <h1 style="margin-top: 2em; margin-bottom: 2em;">entrar</h1>
                <hr />
                <form method="post" action="@Session["urlBase"]/Login/Autenticar">
                    <div class="form-group">
                        <label for="email">e-mail:</label>
                        @if (Model != null && Model.Email != null)
                        {
                            <input type="email" class="form-control" required tile="preencha o e-mail" id="email" name="Email" value="@Model.Email" placeholder="digite o seu e-mail">
                        }
                        else
                        {
                            <input type="email" class="form-control" required tile="preencha o e-mail" id="email" name="Email" placeholder="digite o seu e-mail">
                        }

                    </div>
                    <div class="form-group">
                        <label for="pwd">senha:</label>
                        @if (Model != null && Model.Senha != null)
                        {
                            <input type="password" class="form-control" required tile="preencha a senha" id="pwd" name="Senha" value="@Model.Senha" placeholder="digite a sua senha">
                        }
                        else
                        {
                            <input type="password" class="form-control" required tile="preencha a senha" id="pwd" name="Senha" placeholder="digite a sua senha">
                        }
                    </div>
                    @*<div class="checkbox">
                            <label><input type="checkbox"> lembrar minha senha</label>
                        </div>*@

                    @if (ViewBag.MensagemAutenticacao != null)
                    { <br /><label style="color: red">@ViewBag.MensagemAutenticacao</label><br />}

                    @*<a href="~/home" class="btn btn-vermelho-sem-animacao" role="button">entrar</a>*@
                    <input type="submit" class="btn btn-vermelho-sem-animacao" value="entrar" />
                </form>

                <br />
                <br />
                <p>ainda não tem um usuário?<a href="@Session["urlBase"]/Usuario"> registre-se</a></p>
                <p>esqueceu sua senha?<a href="@Session["urlBase"]/EsqueciASenha"> envie uma nova para o seu e-mail</a></p>

            </div>
        </div>
    </div>
</div>
